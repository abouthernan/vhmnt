        }
    }
</style>

<script>
    // Horizontal scroll indicators
    const horizontalScroll = document.getElementById('horizontalScroll');
    const scrollDots = document.querySelectorAll('.scroll-dot');

    if (horizontalScroll && scrollDots.length > 0) {
        horizontalScroll.addEventListener('scroll', () => {
            const scrollLeft = horizontalScroll.scrollLeft;
            const scrollWidth = horizontalScroll.scrollWidth - horizontalScroll.clientWidth;
            const scrollPercent = scrollLeft / scrollWidth;
            
            const activeIndex = Math.round(scrollPercent * (scrollDots.length - 1));
            
            scrollDots.forEach((dot, i) => {
                dot.classList.toggle('active', i === activeIndex);
            });
        });

        // Auto-scroll suave
        let autoScrollDirection = 1;
        setInterval(() => {
            const maxScroll = horizontalScroll.scrollWidth - horizontalScroll.clientWidth;
            const currentScroll = horizontalScroll.scrollLeft;
            
            if (currentScroll >= maxScroll) autoScrollDirection = -1;
            if (currentScroll <= 0) autoScrollDirection = 1;
            
            horizontalScroll.scrollBy({
                left: autoScrollDirection * 50,
                behavior: 'smooth'
            });
        }, 3000);
    }
</script>