    .horizontal-scroll {
        display: flex;
        gap: 0;
        overflow-x: auto;
        scroll-behavior: smooth;
        scrollbar-width: none;
        -ms-overflow-style: none;
        padding: 0;
    }

    .horizontal-scroll::-webkit-scrollbar {
        display: none;
    }

    .scroll-item {
        min-width: 200px;
        height: 200px;
        background: #0a0a0a;
        border-right: 1px solid #1a1a1a;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
    }

    .scroll-item:last-child {
        border-right: none;
    }

