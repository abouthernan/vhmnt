                animation-duration: 35s;
            }

            .testimonial-nav-button {
                width: 40px;
                height: 40px;
                font-size: 16px;
            }

            .testimonials-stats {
                /* Removido - stats en archivo separado */
            }
        }

        @media screen and (max-width: 480px) {
            .testimonials-carousel-container {
