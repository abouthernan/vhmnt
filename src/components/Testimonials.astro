<script>
    // Auto-scroll testimonials con pausa en móvil
    document.addEventListener('DOMContentLoaded', function() {
        const track = document.querySelector('.testimonials-track');
        const isMobile = window.innerWidth <= 480;
        
        if (isMobile && track) {
            // En móvil, remover la animación y permitir scroll manual
            track.style.animation = 'none';
        }
        
        // Ajustar en resize
        window.addEventListener('resize', function() {
            const newIsMobile = window.innerWidth <= 480;
            if (newIsMobile && track) {
                track.style.animation = 'none';
            } else if (track) {
                track.style.animation = 'scroll-testimonials 40s linear infinite';
            }
        });
        
        console.log('Testimonials auto-scroll iniciado');
    });
</script>