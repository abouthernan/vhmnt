<style>
    /* Estilos generales */

    .section-faq {
        background: #101010;
        color: white;
        padding-top: 2rem;
        padding-bottom: 2rem;
    }

    .container-faq {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0;
    }

    .faq {
        max-width: 100%;
        margin: 4rem auto;
        padding: 8% 0% 8% 0%;
        font-size: 18px;
        color: white;
    }

    h1 {
        text-align: center;
        padding: 2rem 2rem;
        font-size: 42px;
    }

    .faq-list {
        list-style: none;
        padding: 0;
    }

    /* Pregunta */
    .faq-question {
        width: 100%;
        height: auto;
        background: none;
        font-size: 1.2rem;
        font-weight: 300;
        text-align: left;
        vertical-align: middle;
        padding: 1rem;
        display: flex;
        align-items: center;
        cursor: pointer;
        transition: "background" 0.3s ease-in-out;
    }

    .faq-question:hover {
        background: rgba(186, 186, 186, 0.05);
        color: #cacaca;
    }

    /* Icono + */
    .faq-icon {
        font-size: 1.8rem;
        font-weight: bold;
        margin-right: 10px;
        margin-bottom: 0.3rem;
        transition: transform 0.2s ease-in-out;
    }

    /* Respuesta */
    .faq-answer {
        max-height: 0;
        overflow: hidden;
        opacity: 0;
        padding: 0 1rem;
        transition:
            max-height 0.3s ease-in-out,
            opacity 0.2s ease-in-out;
    }

    /* Clase activa cuando se abre */
    .faq-item.active .faq-answer {
        max-height: 800px; /* Ajusta según el contenido */
        opacity: 1;
    }

    .faq-item.active .faq-icon {
        transform: rotate(45deg); /* Cambia el + a - */
    }

    span {
        color: #f7f7f7;
        font-style: italic;
        font-family: "Playfair-Display";
        font-size: 50px;
    }

    /** Mobile Responsive */

    @media screen and (max-width: 768px) {
        .faq {
            padding: 5rem 1.5rem;
        }

        h1 {
            color: #ffffff;
            font-size: 42px;
            text-align: center;
            max-width: 100%;
            line-height: normal;
        }

        p {
            color: rgb(255, 255, 255);
            font-size: 18px;
            max-width: 100%;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const faqItems = document.querySelectorAll(".faq-item");

        faqItems.forEach((item) => {
            const question = item.querySelector(".faq-question");

            question.addEventListener("click", function () {
                // Cierra todas las preguntas antes de abrir otra (si solo quieres una abierta a la vez)
                faqItems.forEach((el) => {
                    if (el !== item) {
                        el.classList.remove("active");
                    }
                });

                // Alternar el estado abierto/cerrado
                item.classList.toggle("active");
            });
        });
    });
</script>
