const equipo = [
  {
    nombre: "Hern치n Estupi침치n",
    rol: "Growth Specialist",
    foto: "/img/team/hernan-estupinan.webp",
  },
  {
    nombre: "Laura D칤az",
    rol: "Data Analytics Specialist",
    foto: "/img/team/laura-diaz.webp",
  },
  {
    nombre: "Nicol치s Guzm치n",
    rol: "Development Manager",
    foto: "/img/team/nicolas-guzman.webp",
  },
  {
    nombre: "Rub칠n Navarro",
    rol: "UX/UI Specialist",
    foto: "/img/team/ruben-navarro.webp",
  },
  {
    nombre: "Felipe Estupi침치n",
    rol: "Cybersecurity Specialist",
    foto: "/img/team/felipe-estupinan.webp",
  },
];

// Duplicamos el array para el efecto de loop infinito
const equipoDuplicado = [...equipo, ...equipo];
---

<section class="section-team">
  <div class="container-team">
    <h1>游붉 Nuestra <span>Manada</span></h1>
    <div class="carousel-container">
      <div class="scroll">
        {
          equipoDuplicado.map((persona, index) => (
            <article class="miembro" key={`${persona.nombre}-${index}`}>
              <div class="photo-container">
                <img src={persona.foto} alt={`Foto de ${persona.nombre}`} loading="lazy" />
              </div>
              <h2>{persona.nombre}</h2>
              <h3>{persona.rol}</h3>
            </article>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .section-team {
    background: #101010;
    color: white;
    padding: 4rem 0;
    overflow: hidden; /* Evita el scroll horizontal */
  }

  .container-team {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  h1 {
    color: white;
    font-size: clamp(28px, 5vw, 42px);
    line-height: 1.2;
    text-align: center;
    margin-bottom: 3rem;
    white-space: nowrap;
  }

  span {
    color: #ffffff;
    font-style: italic;
    font-family: "Playfair-Display", serif;
  }

  .carousel-container {
    overflow: hidden;
    width: 100%;
    position: relative;
    mask: linear-gradient(
      90deg,
      transparent 0%,
      black 10%,
      black 90%,
      transparent 100%
    );
    -webkit-mask: linear-gradient(
      90deg,
      transparent 0%,
      black 10%,
      black 90%,
      transparent 100%
    );
  }

  .scroll {
    display: flex;
    gap: 2rem;
    width: fit-content;
    animation: desplazar 60s linear infinite;
  }

  .miembro {
    flex-shrink: 0;
    width: 200px;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .miembro:hover {
    transform: translateY(-8px);
  }

  .photo-container {
    position: relative;
    margin-bottom: 1rem;
  }

  .photo-container::before {
    content: '';
    position: absolute;
    inset: -4px;
    background: linear-gradient(45deg, #ff6b35, #f7931e, #ff6b35);
    border-radius: 50%;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .miembro:hover .photo-container::before {
    opacity: 1;
  }

  img {
    width: 160px;
    height: 160px;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid #333;
    transition: transform 0.3s ease;
  }

  .miembro:hover img {
    transform: scale(1.05);
  }

  h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0.75rem 0 0.25rem 0;
    line-height: 1.3;
  }

  h3 {
    font-size: 0.9rem;
    color: #8f8e8e;
    font-weight: 400;
    margin: 0;
    line-height: 1.4;
  }

  @keyframes desplazar {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pausa la animaci칩n al hacer hover */
  .carousel-container:hover .scroll {
    animation-play-state: paused;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .section-team {
      padding: 3rem 0;
    }

    .container-team {
      padding: 0 0.5rem;
    }

    h1 {
      margin-bottom: 2rem;
      white-space: normal;
      line-height: 1.3;
    }

    .scroll {
      gap: 1.5rem;
      animation-duration: 40s;
    }

    .miembro {
      width: 150px;
    }

    img {
      width: 120px;
      height: 120px;
    }

    h2 {
      font-size: 1.1rem;
    }

    h3 {
      font-size: 0.85rem;
    }

    .carousel-container {
      mask: linear-gradient(
        90deg,
        transparent 0%,
        black 5%,
        black 95%,
        transparent 100%
      );
      -webkit-mask: linear-gradient(
        90deg,
        transparent 0%,
        black 5%,
        black 95%,
        transparent 100%
      );
    }
  }

  @media screen and (max-width: 480px) {
    .scroll {
      gap: 1rem;
      animation-duration: 30s;
    }

    .miembro {
      width: 130px;
    }

    img {
      width: 100px;
      height: 100px;
    }

    h2 {
      font-size: 1rem;
    }

    h3 {
      font-size: 0.8rem;
    }
  }

  /* Reduce motion para usuarios que prefieren menos animaci칩n */
  @media (prefers-reduced-motion: reduce) {
    .scroll {
      animation-duration: 120s;
    }

    .miembro:hover {
      transform: none;
    }

    .miembro:hover img {
      transform: none;
    }
  }
</style>