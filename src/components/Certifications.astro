        .certification-badge:nth-child(9) { background: linear-gradient(135deg, rgba(245, 158, 11, 0.15), rgba(245, 158, 11, 0.05)); border: 1px solid rgba(245, 158, 11, 0.3); }
        .certification-badge:nth-child(10) { background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(139, 92, 246, 0.05)); border: 1px solid rgba(139, 92, 246, 0.3); }
        .certification-badge:nth-child(11) { background: linear-gradient(135deg, rgba(6, 182, 212, 0.15), rgba(6, 182, 212, 0.05)); border: 1px solid rgba(6, 182, 212, 0.3); }
        .certification-badge:nth-child(12) { background: linear-gradient(135deg, rgba(236, 72, 153, 0.15), rgba(236, 72, 153, 0.05)); border: 1px solid rgba(236, 72, 153, 0.3); }
        .certification-badge:nth-child(13) { background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(16, 185, 129, 0.05)); border: 1px solid rgba(16, 185, 129, 0.3); }
        .certification-badge:nth-child(14) { background: linear-gradient(135deg, rgba(99, 102, 241, 0.15), rgba(99, 102, 241, 0.05)); border: 1px solid rgba(99, 102, 241, 0.3); }
        .certification-badge:nth-child(15) { background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(239, 68, 68, 0.05)); border: 1px solid rgba(239, 68, 68, 0.3); }
        .certification-badge:nth-child(16) { background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(59, 130, 246, 0.05)); border: 1px solid rgba(59, 130, 246, 0.3); }

        .certification-badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: left 0.5s;
        }

        .certification-badge:hover {
            transform: translateY(-2px) scale(1.02);
            filter: brightness(1.2);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

        .certification-badge:hover::before {
            left: 100%;
        }

        /* Animaciones de movimiento - loop perfecto desde centro */
        @keyframes scroll-right-loop {
            0% {
                transform: translateX(-50%);
            }
            100% {
                transform: translateX(-150%);
            }
        }

        @keyframes scroll-left-loop {
            0% {
                transform: translateX(-50%);
            }
            100% {
                transform: translateX(50%);
            }
        }

        /* Responsive */
        @media screen and (max-width: 768px) {
            .section {
                padding: 3rem 0;
            }

            .section-container {
                padding: 0 1rem;
            }

            .section-title {
                font-size: 2rem;
                margin-bottom: 2rem;
            }

            .certifications-wrapper::before,
            .certifications-wrapper::after {
                width: 60px;
            }

            .certification-badge {
                padding: 0.8rem 1.5rem;
                font-size: 0.85rem;
                min-width: 180px;
            }

            .certifications-row {
                gap: 1.5rem;
                margin-bottom: 1rem;
            }

            /* Velocidades de 120s para móvil también */
            .certifications-row:nth-child(1) {
