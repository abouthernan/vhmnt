<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.getElementById('carousel') as HTMLElement;
    const indicatorsContainer = document.getElementById('indicators') as HTMLElement;
    const prevButton = document.querySelector('.nav-button.prev') as HTMLButtonElement;
    const nextButton = document.querySelector('.nav-button.next') as HTMLButtonElement;
    
    // Verificar que los elementos existen
    if (!carousel || !indicatorsContainer) return;
    
    // Funci√≥n para scroll del carrusel
    function scrollCarousel(direction: number): void {
      const cardWidth = window.innerWidth <= 480 ? 250 : window.innerWidth <= 768 ? 280 : 300;
      const scrollAmount = cardWidth * direction;
      carousel.scrollBy({
        left: scrollAmount,
        behavior: 'smooth'
      });
    }

    // Event listeners para los botones (solo en desktop)
    if (prevButton && nextButton) {
      prevButton.addEventListener('click', () => scrollCarousel(-1));
      nextButton.addEventListener('click', () => scrollCarousel(1));
    }

    // Crear indicadores din√°micamente
    function createIndicators(): void {
      const totalCards = document.querySelectorAll('.card-minimal').length;
      const containerWidth = carousel.offsetWidth;
      const cardWidth = window.innerWidth <= 480 ? 250 : window.innerWidth <= 768 ? 280 : 300;
      const gap = window.innerWidth <= 480 ? 12 : window.innerWidth <= 768 ? 16 : 24;
      const visibleCards = Math.floor(containerWidth / (cardWidth + gap));
      const totalDots = Math.max(1, totalCards - visibleCards + 1);
      
      indicatorsContainer.innerHTML = '';
      for (let i = 0; i < totalDots; i++) {
        const dot = document.createElement('div');
        dot.className = 'scroll-dot';
        if (i === 0) dot.classList.add('active');
        dot.addEventListener('click', () => scrollToPosition(i));
        indicatorsContainer.appendChild(dot);
      }
    }

    // Scroll a posici√≥n espec√≠fica
    function scrollToPosition(index: number): void {
      const scrollWidth = carousel.scrollWidth;
      const containerWidth = carousel.offsetWidth;
      const maxScroll = scrollWidth - containerWidth;
      const dots = document.querySelectorAll('.scroll-dot');
      
      if (dots.length <= 1) return;
      
      const scrollPosition = (maxScroll / (dots.length - 1)) * index;
      carousel.scrollTo({
        left: scrollPosition,
        behavior: 'smooth'
      });
    }

    // Funci√≥n para actualizar indicadores
    function updateIndicators(): void {
      const dots = document.querySelectorAll('.scroll-dot');
      if (dots.length === 0) return;
      
      const scrollLeft = carousel.scrollLeft;
      const scrollWidth = carousel.scrollWidth;
      const containerWidth = carousel.offsetWidth;
      const maxScroll = scrollWidth - containerWidth;
      
      // Calcular √≠ndice basado en porcentaje de scroll
      const scrollPercent = maxScroll > 0 ? scrollLeft / maxScroll : 0;
      const activeIndex = Math.round(scrollPercent * (dots.length - 1));
      
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === activeIndex);
      });
    }

    // Event listeners
    carousel.addEventListener('scroll', updateIndicators);
    window.addEventListener('resize', () => {
      createIndicators();
      updateIndicators();
    });

    // Inicializar
    createIndicators();
    updateIndicators();

    // Forzar actualizaci√≥n inicial despu√©s de un breve delay
    setTimeout(() => {
      createIndicators();
      updateIndicators();
    }, 100);
  });
</script>