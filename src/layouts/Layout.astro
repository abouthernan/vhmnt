---
import Header from '../components/Header.astro';
import Whatsapp from '../components/Whatsapp.astro';

interface Props { //Typescrypt 
	title: string; 
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<!--<meta name="viewport" content="width=device-width" /> -->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>	

		<meta name="description" content="Creative &amp; Modern Agency HTML5 Template">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
		<!--Favicon-->
		<link rel="icon" type="image/svg+xm" href="../src/assets/favicon.svg">
		<!--Framework-->
		<link rel="stylesheet" href="/css/framework/bootstrap.min.css">
		<!--Fonts-->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="/fonts/Swansea/style.css">
		<link rel="stylesheet" href="/fonts/Skape/style.css">
		<link rel="stylesheet" href="/fonts/Socicons/socicon.css">
		<link rel="stylesheet" href="/fonts/Playfair-Display/style.css">
		<!--Plugins-->
		<link rel="stylesheet" href="/css/vlt-plugins.min.css">
		<!--Style-->
		<link rel="stylesheet" href="/css/vlt-main.min.css">
		<!--Global Style-->
		<link rel="stylesheet" href="/css/styles.css">
		<!--Libs-->
		<script is:inline src="/vendors/jquery-3.5.1.min.js" defer></script>
		<script is:inline src="/scripts/vlt-plugins.min.js" defer></script>
		<script is:inline src="/scripts/vlt-helpers.js" defer></script>
		<script is:inline src="/scripts/vlt-controllers.min.js" defer></script>
		<script src="/scripts/menu.js" defer></script>
	</head>

	<Header />
	<Whatsapp />
	
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		border: none; 
		padding-top: 1rem;
		padding-bottom: 1rem;
        background: radial-gradient(circle, #202020 0%, #101010 100%);
	}
	

</style>
