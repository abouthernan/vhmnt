---
import GoogleAnalytics from "../components/Analytics.astro";
import Header from "../components/Header.astro";
import Tags from "../components/Tags.astro";
import Whatsapp from "../components/Whatsapp.astro";
import WhConversion from "../components/WhConversion.astro";

interface Props {
	//Typescrypt
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<!--<meta name="viewport" content="width=device-width" /> -->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<meta
			name="Vehement Agency"
			content="Somos un equipo de expertos en diferentes áreas, enfocados en la metodología Lean Startup; creamos, medimos, aprendemos, iteramos. Somos Data Driven, lo que no se mide no se mejora. Hacemos Producto, Ingeniería Web, Growth Marketing, Scientific Advertising, UX/UI, Automatización IA, Cyberseguridad, Consultoría y Mentoría."
		/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, maximum-scale=1"
		/>

		<!--Tags Conversion-->
		<WhConversion />
		 <!-- Otros meta tags -->
  		<GoogleAnalytics id="G-HTNRCRL5YM" />

		<!--Favicon-->
		<link rel="icon" type="image/svg+xm" href="/img/logos/favicon.svg" />
		<!--Framework-->
		<link rel="stylesheet" href="/css/framework/bootstrap.min.css" />
		<!--Fonts-->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="/fonts/Swansea/style.css" />
		<link rel="stylesheet" href="/fonts/Skape/style.css" />
		<link rel="stylesheet" href="/fonts/Socicons/socicon.css" />
		<link rel="stylesheet" href="/fonts/Playfair-Display/style.css" />
		<!--Plugins-->
		<link rel="stylesheet" href="/css/vlt-plugins.min.css" />
		<!--Style-->
		<link rel="stylesheet" href="/css/vlt-main.min.css" />
		<!--Global Style-->
		<link rel="stylesheet" href="/css/styles.css" />
		<!--Libs-->
		<script is:inline src="/vendors/jquery-3.5.1.min.js" defer></script>
		<script is:inline src="/scripts/vlt-plugins.min.js" defer></script>
		<script is:inline src="/scripts/vlt-helpers.js" defer></script>
		<script is:inline src="/scripts/vlt-controllers.min.js" defer></script>
		<script src="/scripts/menu.js" defer></script>

		<GoogleAnalytics />
		<WhConversion />
	</head>

	<Header />
	<Whatsapp />

	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--section-padding: 10% 18% 8% 18%;
		--section-padding-mobile: 20% 8% 5% 8%;
		--bg-primary: #101010;
		--text-primary: #ffffff; /* Blanco para contraste */
		--text-fade: rgba(
			113,
			113,
			113,
			0.8
		); /* Blanco con opacidad para texto secundario */

		/* Tipografía - Fuentes */
		--font-primary: "Swansea", serif;
		--font-secondary: "Playfair Display", serif;

		/* Colores */
		--primary-color: #00f5ff; /* Azul brillante */
		--secondary-color: #00ff88; /* Verde brillante */

		/* Gradientes */
		--gradient-primary: linear-gradient(135deg, #00f5ff, #00ff88);

		/* Tipografía - Tamaños */
		--h1-size: 2.5rem;
		--h2-size: 2.5rem;
		--p-size: 1.125rem;
		--p-small-size: 0.8rem;

		/* Tipografía - Peso */
		--h1-weight: 400;
		--h2-weight: 600;
		--p-weight: 400;

		/* Tipografía - Altura de línea */
		--h1-line-height: 1.2;
		--h2-line-height: 1.3;
		--p-line-height: 1.6;

		/* Espaciado */
		--h1-margin: 0 0 2rem 0;
		--h2-margin: 0 0 1.5rem 0;
		--p-margin: 0 0 1.5rem 0;
	}

	/* Estilos Globales */
	body {
		background-color: var(--bg-primary);
		color: var(--text-primary);
		margin: 0;
		font-family:
			system-ui,
			-apple-system,
			sans-serif;
	}

	section {
		padding: 10% 18% 5% 18%;
	}

	/* Excepción para secciones full-width */
	.section-no-padding {
		padding: 0;
	}

	/* O padding personalizado */
	.section-minimal {
		padding: 2rem 12rem 2rem 12rem;
	}

	h1 {
		font-size: var(--h1-size);
		font-weight: var(--h1-weight);
		line-height: var(--h1-line-height);
		margin: var(--h1-margin);
		color: var(--text-primary);
		font-family: var(--font-primary);
	}

	h2 {
		font-size: var(--h2-size);
		font-weight: var(--h2-weight);
		line-height: var(--h2-line-height);
		margin: var(--h2-margin);
		color: var(--text-primary);
	}

	p {
		font-size: var(--p-size);
		font-weight: var(--p-weight);
		line-height: var(--p-line-height);
		margin: var(--p-margin);
		color: var(--text-primary);
	}

	p.section-small {
		font-size: var(--p-small-size);
		font-weight: var(--p-weight);
		line-height: var(--p-line-height);
		margin: var(--p-margin);
		color: var(--text-fade);
		padding-top: 1.8rem;
		padding-left: 0.5rem;
		padding-right: 0.5rem;
		text-align: center;
	}

	.gradient-heading {
		font-size: 3rem;
		font-weight: 400;
		max-width: 100%;
		line-height: 1;
		margin: 0;
		color: #ffffff;
	}

	.gradient-accent {
		font-style: italic;
		font-family: "Playfair-Display" !important;
		font-size: 1.2em;

		/* Gradiente complementario para el span */
		background: linear-gradient(135deg, #00ff88, #00f5ff);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	span {
		color: #00ff88;
		font-style: italic;
		font-family: "Playfair-Display", serif;
		font-size: 42px;
	}

	/* Responsive */

	@media (max-width: 768px) {
		:root {
			--h1-size: 2rem;
			--h2-size: 2rem;
			--p-size: 1rem;
		}

		/* O padding personalizado */
		section {
			padding: var(--section-padding-mobile);
		}

		/* Excepción para secciones full-width */
		.section-no-padding {
			padding: 0;
		}

		/* O padding personalizado */
		.section-minimal {
			padding: 0%;
		}
	}
</style>
